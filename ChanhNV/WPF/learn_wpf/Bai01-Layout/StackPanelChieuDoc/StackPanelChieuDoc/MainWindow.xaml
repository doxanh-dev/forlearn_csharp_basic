<!--Khai báo khởi tạo cửa sổ-->
<Window x:Class="StackPanelChieuDoc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StackPanelChieuDoc"
        mc:Ignorable="d"
        Title="StackPanel chiều dọc" Height="450" Width="800">
    <Grid Margin="100">
        <!--Sử dụng StackPanel theo chiều dọc-->
        <StackPanel Background="Beige">
            <!--Thiết lập thuộc tính khung viền bao quanh control 1-->
            <Border Width="200" BorderBrush="DarkSlateBlue" Background="#a9e969" BorderThickness="4">
                <!--Khai báo control 1 dạng Checkbox-->
                <CheckBox>Control 1: Chekcbox</CheckBox>
            </Border>

            <!--Khai báo control 2 dạng nút bấm-->
            <Button Width="200">Control 2: Nút bấm</Button>

            <Border Width="200" BorderBrush="#feca00" BorderThickness="4">
                <!--Khai báo control 3 dạng text-->
                <TextBlock HorizontalAlignment="Right">Control 3: Dạng Text</TextBlock>            </Border>

        </StackPanel>
        
    </Grid>
</Window>
