<Window x:Class="StackPanelChieuNgang.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StackPanelChieuNgang"
        mc:Ignorable="d"
        Title="StackPanelChieuNgang" Height="450" Width="800">
    <Grid Margin="5">
        <!--StackPanel sắp xếp theo chiều ngang xác định bằng thuộc tính Orientation="Horizontal"-->
        <StackPanel Background="Gray" Orientation="Horizontal">
            <!--Thiết lập thuộc tính khung viền bao quanh control 1-->
            <Border Width="90" Height="80" BorderBrush="DarkSlateBlue" Background="#a9e969" BorderThickness="2">
                <!--Khai báo control 1 dạng checkbox-->
                <CheckBox>checkbox</CheckBox>
            </Border>

            <!--Khai báo control 2 dạng nút bấm-->
            <Button Width="90" >Nút bấm</Button>

            <!--Thiết lập thuộc tính khung viền bao quanh control 3-->
            <Border Width="100" BorderBrush="#feca00" BorderThickness="3">
                <!--Khai báo control 3 dạng text-->
                <TextBlock HorizontalAlignment="Center">Control 3</TextBlock>
            </Border>

        </StackPanel>
    </Grid>
</Window>
